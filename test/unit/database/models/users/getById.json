{
	"title": "get user by id",
	"description": "get user details by user ID",
	"type": "object",
	"properties": {
		"updateUserAt": {
			"type": "number",
			"description": "timestamp of last user updates from current user"
		},
		"id": {
			"type": "string",
			"pattern": "[0-9a-fA-F]{8}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{12}",
			"description": "id of the user.",
			"maxLength": 36,
			"minLength": 36
		},
		"username": {
			"type": "string",
			"description": "Username of user.",
			"maxLength": 64,
			"minLength": 6,
			"pattern": "[A-Za-z0-9_-]+"
		},
		"status": {
			"type": "object",
			"description": "status of user.",
			"properties": {
				"id": {
					"type": "number",
					"description": "id of the status"
				},
				"name": {
					"type": "string",
					"description": "name of the status",
					"maxLength": 64,
					"minLength": 3,
					"pattern": "[A-Za-z0-9_-]+"
				}
			},
			"required": ["id", "name"]
		},
		"updateSystemAt": {
			"type": "number",
			"description": "timestamp of last user updates from system"
		}
	},
	"required": ["updateUserAt", "id", "username"]
}
